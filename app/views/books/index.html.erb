<div class="success">
    <%= flash[:notice] %>
</div>
<h1>Books</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Body</th>
  </tr>
  <% @books.each do |book| %>
    <tr>
      <td>
        <%= book.title %>
      </td>
      <td>
        <%= book.body %>
      </td>
      <td>
        <%= link_to 'Show', book_path(book), class:"button" %>
      </td>
      <td>
        <%= link_to 'Edit', edit_book_path(book), class:"button" %>
      </td>
      <td>
        <%= link_to 'Destroy', book_path(book), method: :delete, class:"button", "data-confirm" => "Are you sure?" %>
      </td>
    </tr>
  <% end %>
</table>

<h2>New Book</h2>
<% if @book.errors.any? %>
  <div class="error-box">
    <h2><%= @book.errors.count %>errors prohibited this book from being saved:</h2>
    <div class="error-alert">
      <ul>
        <% @book.errors.full_messages.each do |message| %>
        <li class='error-message'><%= message %></li>
        <% end %>
      </ul>
    </div>
  </div>
<% end %>
<%= form_with model:@book, local:true do |f| %>
  <p>Title</p>
  <%= f.text_field :title %>
  <p>Body</p>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book', class:"action" %>
<% end %>