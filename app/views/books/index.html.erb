<h1>Books</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Body</th>
  </tr>
  <tr>
    <% @books.each do |book| %>
      <td>
        <%= book.title %>
      </td>
      <td>
        <%= book.body %>
      </td>
      <td>
        <%= link_to 'Show',book_path(book) %>
      </td>
      
      <td>Edit</td>
      <td>Destroy</td>
    <% end %>
  </tr>

</table>