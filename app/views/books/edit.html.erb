<h1>Editting Book</h1>
<%= form_with model:@book, local:true do |f| %>
    <p>Title</p>
    <%= f.text_field :title %>
    <p>Body</p>
    <%= f.text_area :body %>
    <%= f.submit 'Update Book',class:"action" %>
<% end %>
<div class="under-button">
    <%= link_to 'Show', book_path(@book), class:"button" %>
    <span> | </span>
    <%= link_to 'Back', books_path, class:"button" %>
</div>